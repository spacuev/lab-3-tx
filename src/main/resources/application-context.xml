	</bean>

	<bean id="countryService" class="com.luxoft.springdb.lab3.service.CountryServiceImpl">
		<property name="countryDao" ref="countryDao"/>
	</bean>

	<bean id="programmaticTransactionCountryService" class="com.luxoft.springdb.lab3.service.ProgrammaticTransactionCountryServiceImpl">
		<property name="dao" ref="countryDao"/>
